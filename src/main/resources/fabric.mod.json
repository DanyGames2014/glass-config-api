{
  "schemaVersion": 1,
  "id": "gcapi",
  "version": "${version}",

  "name": "Glass Config API",
  "description": "An actually pretty good config GUI with an API to match. Heavily hackable and extendable.",
  "authors": [
    "calmilamsy"
  ],
  "contact": {
    "homepage": "https://glass-launcher.net/",
    "sources": "https://github.com/calmilamsy/Glass-Config-API",
    "issues": "https://github.com/calmilamsy/Glass-Config-API/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/gcapi/icon.png",

  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      "net.glasslauncher.mods.gcapi.impl.GCCore"
    ],
    "gcapi:factory_provider": [
      "net.glasslauncher.mods.gcapi.impl.factory.DefaultFactoryProvider"
    ],
    "stationapi:event_bus_server": [
      "net.glasslauncher.mods.gcapi.impl.event.InitServerNetworking"
    ],
    "stationapi:event_bus_client": [
      "net.glasslauncher.mods.gcapi.impl.event.InitClientNetworking",
      "net.glasslauncher.mods.gcapi.impl.event.TranslationHandler"
    ]
  },
  "custom": {
    "modmenu:api": true
  },
  "mixins": [
    "gcapi.mixins.json"
  ],

  "depends": {
    "minecraft": "1.0.0-beta.7.3"
  },
  "suggests": {
    "modmenu": "*"
  }
}
